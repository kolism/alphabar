{
  "manifest_version": 2,
  "name": "alphabar",
  "short_name": "alphabar",
  "version": "1.0.0",
  "description":
    "alphabar",

  "author": "Kolism",
  "background": {
    "scripts": ["pages/background/index.js"]
  },
  "content_scripts": [
    {
      "matches": ["<all_urls>"],
      "js": ["pages/index.js"],
      "run_at": "document_end",
      "exclude_matches": ["https://www.youtube.com/*"]
    }
  ],
  "permissions": [
    "tabs",
    "activeTab",
    "http://*/*",
    "https://*/*",
    "storage",
    "alarms"
  ],
  "minimum_chrome_version": "60",
  "icons": {
    "16": "assets/list.png",
    "48": "assets/list.png",
    "128": "assets/list128.png"
  }
}